<!DOCTYPE html>
<html lang="en">
    <%- include('partials/header', { title: "Manage Servers - Ark ASA" }) %>
<body data-page="index">
    <header class="bg-dark text-white p-3 mb-4">
        <div class="container">
            <h1>Ark ASA Server Dashboard</h1>
            <nav>
                <a href="/servers" class="btn btn-secondary">Manage Servers</a>
            </nav>
        </div>
    </header>

    <main class="container">
        <section id="server-stats" class="mb-4">
            <h2>Global Statistics</h2>
            <div class="stats-container row">
                <div class="col"><p>Total Servers: <span id="total-servers">0</span></p></div>
                <div class="col"><p>Active Servers: <span id="active-servers">0</span></p></div>
                <div class="col"><p>Total Players: <span id="total-players">0</span></p></div>
                <div class="col"><p>CPU Usage: <span id="cpu-usage">0%</span></p></div>
                <div class="col"><p>Memory Usage: <span id="memory-usage">0MB</span></p></div>
            </div>
            <canvas id="performanceChart" class="my-3"></canvas>
        </section>

        <!-- Servers Section -->
        <section id="server-list">
            <h2>Servers</h2>
            <div class="row" id="servers-container">
                <% servers.forEach(server => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card server-card shadow-sm">
                            <div class="card-header text-white bg-dark text-center">
                                <h5 id="server-name-<%= server.SERVER_NAME %>" class="mb-0 p-2 rounded">
                                    <%= server.SERVER_NAME %> 
                                    <span id="status-hidden-<%= server.SERVER_NAME %>" class="d-none">off</span>
                                </h5>
                            </div>
                            <div class="card-body text-center">
                                <div class="mt-3">
                                    <small>CPU: <span id="cpu-<%= server.SERVER_NAME %>" class="text-info">N/A</span>%</small><br>
                                    <small>Memory: <span id="memory-<%= server.SERVER_NAME %>" class="text-warning">N/A</span> GB</small>
                                </div>
                                <div class="mt-3">
                                    <small>Players: <span id="players-<%= server.SERVER_NAME %>" class="text-primary">0</span></small>
                                </div>
                                <div class="mt-3">
                                    <button class="btn btn-success btn-sm me-1 btn-start" data-server="<%= server.SERVER_NAME %>">
                                        <i class="fas fa-play"></i> Start
                                    </button>
                                    <button class="btn btn-danger btn-sm me-1 btn-stop" data-server="<%= server.SERVER_NAME %>">
                                        <i class="fas fa-stop"></i> Stop
                                    </button>
                                    <button class="btn btn-warning btn-sm btn-restart" data-server="<%= server.SERVER_NAME %>">
                                        <i class="fas fa-sync-alt"></i> Restart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </main>

    <%- include('partials/footer', { page: "index" }) %>
</body>
</html>
